<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
  <springProperty name="appName" scope="context" source="spring.application.name"/>

  <!-- Human-readable encoder with some nice management-proof colours, default in local development mode -->
  <appender name="HUMANREADABLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
<!--      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%level) [%green(%X{traceId}-%X{spanId})] [%magenta(%thread)] [%blue(%X{vz.keyword.tx_type})] [%red(%X{vz.keyword.tx_status})] [%cyan(%logger:%line)]: %n\t%msg%n</pattern>-->
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%level) [%green(%X{traceId}-%X{spanId})] [%magenta(%thread)][%cyan(%logger:%line)]: %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Logging levels -->
  <logger level="INFO" name="org.springframework.cache"/>
  <logger level="INFO" name="org.springframework.security"/>
  <logger level="INFO" name="org.springframework.security.web"/>
  <logger level="INFO" name="org.springframework.web"/>
  <logger level="INFO" name="org.springframework.web.socket"/>

  <logger level="INFO" name="org.hawaiiframework"/>
  <logger level="DEBUG" name="org.hawaiiframework.logging.http.DefaultHawaiiRequestResponseLogger"/>
  <logger level="INFO" name="org.hawaiiframework.logging.web.filter" />



  <root level="${ROOT_LOG_LEVEL:-INFO}">
    <!-- Enable the chosen appender for console output -->
    <appender-ref ref="${LOG_APPENDER:-HUMANREADABLE}"/>
  </root>

</configuration>
